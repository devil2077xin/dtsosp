    <select id="isScore" parameterType="Score" resultType="Score">
        select * from t_score_old where course_id = #{courseId} and student_id = #{studentId}
    </select>

    <update id="editScore" parameterType="Score">
        update  t_score_old set course_id = #{courseId},student_id = #{studentId},score = #{score}, remark = #{remark} where id = #{id}
    </update>

    <select id="getAll" parameterType="Score" resultMap="ScoreInfo">
        select  t_score_old.*,t_course.name as courseName,t_student.username as studentName
        from t_score_old,t_course,t_student
        <where>
            t_score_old.course_id = t_course.id and t_score_old.student_id = t_student.id
            <if test="courseId!=null and courseId != ''"> and course_id = #{courseId} </if>
            <if test="studentId!=null and studentId != ''"> and student_id = #{studentId} </if>
        </where>
    </select>

    <select id="getAvgStats" parameterType="int" resultType="ScoreStats">
        select max(t_score_old.score) as max_score,avg(t_score_old.score) as avg_score,min(t_score_old.score) as min_score,t_course.name as courseName
        from t_score_old,t_course
        where t_score_old.course_id=t_course.id and t_score_old.course_id = #{courseid}
    </select>


