<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wdd.studentmanager.mapper.LeaveMapper">

    <resultMap type="com.wdd.studentmanager.domain.Leave" id="LeaveInfo">
        <result column="id" property="id"/>
        <result column="student_id" property="studentId"/>
        <result column="info" property="info"/>
        <result column="status" property="status"/>
        <result column="remark" property="remark"/>
    </resultMap>

    <select id="queryList" resultMap="LeaveInfo" >
        <!-- 根据条件查询 图书的所有信息 -->
        SELECT *
        from t_leave
        <where>
            <if test="studentId!=null"> and student_id = #{studentId} </if>
        </where>
        limit #{startIndex},#{pagesize}
    </select>

    <select id="queryCount" resultType="int" >
        select count(*) from t_leave
        <where>
            <if test="studentId!=null"> and student_id = #{studentId} </if>
        </where>
    </select>

    <insert id="addLeave" parameterType="Leave">
        insert into t_leave(student_id,info)
        values(#{studentId},#{info})
    </insert>

    <delete id="deleteLeave" parameterType="int">
        delete from t_leave where id = #{id}
    </delete>

    <update id="editLeave" parameterType="Leave">
        update t_leave set student_id = #{studentId},info = #{info} where id = #{id}
    </update>

    <update id="checkLeave" parameterType="Leave">
        update t_leave set student_id = #{studentId},info = #{info},status = #{status},remark = #{remark} where id = #{id}
    </update>

