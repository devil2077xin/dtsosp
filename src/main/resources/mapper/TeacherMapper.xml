<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.edu.dtsosp.mapper.TeacherMapper">

    <resultMap type="com.edu.dtsosp.domain.Teacher" id="TeacherInfo">
        <result column="id" property="id"/>
        <result column="userid" property="userid"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="clazz_id" property="clazzId"/>
        <result column="sex" property="sex"/>
        <result column="mobile" property="mobile"/>
        <result column="qq" property="qq"/>
        <result column="photo" property="photo"/>
    </resultMap>

    <select id="queryList" resultMap="TeacherInfo" >
        <!-- 根据条件查询所有信息 -->
        SELECT *
        from t_teacher
        <where>
            <if test="username!=null"> and username LIKE concat("%",#{username},"%") </if>
            <if test="clazzid!=null"> and clazz_id LIKE concat("%",#{clazzid},"%") </if>
            <if test="teacherid!=null"> and id = #{teacherid} </if>
        </where>
        limit #{startIndex},#{pagesize}
    </select>

    <select id="queryCount" resultType="int" >
        select count(*) from t_teacher
        <where>
            <if test="username!=null"> and username LIKE concat("%",#{username},"%") </if>
            <if test="clazzid!=null"> and clazz_id LIKE concat("%",#{clazzid},"%") </if>
            <if test="teacherid!=null"> and id = #{teacherid} </if>
        </where>
    </select>

    <insert id="addTeacher" parameterType="Teacher">
        insert into t_teacher(userid,username,password,clazz_id,sex,mobile,qq,photo)
        values(#{userid},#{username},#{password},#{clazzId},#{sex},#{mobile},#{qq},#{photo})
    </insert>

    <delete id="deleteTeacher" parameterType="java.util.ArrayList">
        delete from t_teacher
        <where>
            id in
            <foreach collection="list" open="(" close=")" separator="," item="id">
                #{id}
            </foreach>
        </where>
    </delete>

    <update id="editTeacher" parameterType="Teacher">
        update t_teacher
        <set>
            <if test="userid != null">
                userid = #{userid},
            </if>
            <if test="username != null">
                username = #{username},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="clazzId != null">
                clazz_id = #{clazzId},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="mobile != null">
                mobile = #{mobile},
            </if>
            <if test="qq != null">
                qq = #{qq},
            </if>
        </set>
        where id = #{id}

    </update>


    <select id="findById" parameterType="int" resultType="Teacher">
        select * from t_teacher where id = #{tid}
    </select>


    <select id="findByTeacher" parameterType="Teacher" resultType="Teacher">
        select * from t_teacher where username = #{username} and password = #{password}
    </select>

    <update id="editPswdByTeacher" parameterType="Teacher">
        update  t_teacher set password = #{password} where id = #{id}
    </update>
</mapper>